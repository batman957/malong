.jiezhi {
  width: 100%;
}

.ul {
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
}

.li {
  width: 88vw;
  margin: 3vw 0;
  box-shadow: 0 0 3px 0 #8bd6d0;
  padding: 2vw 3vw;
  border-radius: 2vw;
}

.top {
  border-bottom: 1px solid #f8f8f8;
  padding: 2vw 0;
}

.top view {
  padding: 1vw 0;
  font-size: 28rpx;
}

.top .yingpin {
  color: #bbb;
}

.top .title {
  width: 100%;
  display: -webkit-flex;
  justify-content: space-between;
}

.bottom {
  display: -webkit-flex;
  justify-content: space-between;
  padding-top: 3vw;
}

.bottom text {
  color: #bbb;
}

.operate {
  display: -webkit-flex;
  align-items: center;
  justify-content: space-around;
}

.operate view {
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  border-radius: 1vw;
  box-sizing: border-box;
  min-width: 16vw;
  height: 7vw;
  font-size: 28rpx;
  padding: 1vw 2.5vw;
}

.passBtn {
  color: #fff;
  background-color: #46cfc4;
}

.unpassBtn {
  color: #f00;
  border: 1px solid #f00;
}

.popup {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

.overlay {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.content {
  width: 90vw;
  height: 50vw;
  background-color: #fff;
  position: fixed;
  top: 40%;
  left: 5vw;
  margin-top: -24vw;
  z-index: 11;
  border-radius: 2vw;
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
}

.popup .title {
  width: 100%;
  height: 12vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

textarea {
  width: 74%;
  /* min-width: 300px; */
  height: 18vw;
  padding: 3vw;
  background-color: #f8f8f8;
}

.popup .operate {
  width: 100%;
  height: 18vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.popup .operate .btn {
  padding: 1.5vw 6vw;
  background-color: #46cfc4;
  color: #fff;
  border-radius: 1vw;
}

@keyframes action_scale {
  0% {
    transform: scale(0.2);
    opacity: 0;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes action_scaleOut {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  100% {
    transform: scale(0.2);
    opacity: 0;
  }
}

.empty {
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
  justify-content: space-around;
  height: 60vw;
  margin-top: 10vw;
}

.empty image {
  width: 40vw;
  height: auto;
}
.status {
  padding: 1vw 6vw;
  border: 1px solid #46cfc4;
  color: #46cfc4;
  border-radius: 1vw;
}
.applyBtn {
  width: 94%;
  height: 11vw;
  border-radius: 1vw;
  color: #fff;
  background-color: #46cfc4;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 5vw;
  left: 3vw;
  z-index: 99;
}
