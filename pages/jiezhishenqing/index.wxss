.shenqing {
  width: 100%;
  padding-bottom: 10vw;
}

.form {
  display: -webkit-flex;
  flex-flow: column;
  width: 100%;
}

.row {
  width: 94%;
  padding: 3vw;
  display: -webkit-flex;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
}

label {
  width: 20%;
}
input {
  width: 80%;
}
.rightAlign {
  text-align: right;
}
.detailRow {
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  width: 94%;
  padding: 3vw;
  border-bottom: 1px solid #f8f8f8;
}
.rightLabel {
  /* width: 100%; */
  display: -webkit-flex;
  justify-content: flex-end;
  align-items: center;
}
.saveBtn {
  width: 94%;
  height: 10vw;
  background-color: #46cfc4;
  border-radius: 1vw;
  color: #fff;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  z-index: 99;
  bottom: 3vw;
  left: 3vw;
  letter-spacing: 2vw;
  font-size: 36rpx;
}

.sendCodeBtn {
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 25vw;
  padding: 1vw 0;
  background-color: #46cfc4;
  color: #fff;
  border-radius: 1vw;
  position: absolute;
  right: 3vw;
  margin-top: -1vw;
  z-index: 9;
}
.hasSendCodeBtn {
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 25vw;
  padding: 1vw 0;
  background-color: #999;
  color: #fff;
  border-radius: 1vw;
  position: absolute;
  right: 3vw;
  margin-top: -1vw;
  z-index: 9;
}
.icon {
  position: absolute;
  right: 3vw;
  top: 50%;
  margin-top: -16rpx;
}

.popup {
  width: 100%;
  height: 100%;
}

.popup .mask {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 66;
}

.popup-body {
  width: 100%;
  /* height: 100vw; */
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 99;
}

.popup-body view {
  padding: 3vw;
  display: -webkit-flex;
  width: 94%;
  align-items: center;
  justify-content: center;
}
.popup-body .camera {
  border-bottom: 1px solid #f8f8f8;
}
.popup-body .cancel {
  border-top: 2vw solid #f8f8f8;
}

.status {
  padding: 1vw 6vw;
  border: 1px solid #46cfc4;
  color: #46cfc4;
  margin: 8vw auto;
  border-radius: 1vw;
}
.reason {
  width: 100%;
  padding-left: 3vw;
}
.operate {
  width: 100%;
  margin-top: 10vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-around;
}
.passBtn {
  width: 24vw;
  height: 8vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #46cfc4;
  border: 1px solid #46cfc4;
  border-radius: 1vw;
}
.unPassBtn {
  width: 24vw;
  height: 8vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  color: #f00;
  background-color: #fff;
  border: 1px solid #f00;
  border-radius: 1vw;
}
.popupReason {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

.popupReason .overlay {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.popupReason .operate {
  width: 100%;
  height: 18vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.popupReason .operate .btn {
  padding: 1.5vw 6vw;
  background-color: #46cfc4;
  color: #fff;
  border-radius: 1vw;
}
.popupReason .content {
  width: 90vw;
  height: 50vw;
  background-color: #fff;
  position: fixed;
  top: 40%;
  left: 5vw;
  margin-top: -24vw;
  z-index: 99;
  border-radius: 2vw;
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
}

.popupReason .title {
  width: 100%;
  height: 12vw;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.popupReason textarea {
  width: 74%;
  /* min-width: 300px; */
  height: 18vw;
  padding: 3vw;
  background-color: #f8f8f8;
}
@keyframes action_scale {
  0% {
    transform: scale(0.2);
    opacity: 0;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes action_scaleOut {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  100% {
    transform: scale(0.2);
    opacity: 0;
  }
}
