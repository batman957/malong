.shenqing {
  width: 100%;
  padding-bottom: 10vw;
}

.form {
  display: -webkit-flex;
  flex-flow: column;
  width: 100%;
}

.row {
  width: 94%;
  padding: 3vw;
  display: -webkit-flex;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
}

label {
  width: 20%;
}

.saveBtn {
  width: 94%;
  height: 10vw;
  background-color: #46cfc4;
  border-radius: 1.5vw;
  color: #fff;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  z-index: 99;
  bottom: 3vw;
  left: 3vw;
  letter-spacing: 2vw;
  font-size: 36rpx;
}

.sendCodeBtn {
  padding: 1vw 2.5vw;
  background-color: #46cfc4;
  color: #fff;
  border-radius: 1vw;
  position: absolute;
  right: 3vw;
  margin-top: -1vw;
}
.hasSendCodeBtn {
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 25vw;
  padding: 1vw 0;
  background-color: #999;
  color: #fff;
  border-radius: 1vw;
  position: absolute;
  right: 3vw;
  margin-top: -1vw;
  z-index: 9;
}
.icon {
  position: absolute;
  right: 3vw;
  top: 50%;
  margin-top: -16rpx;
}
.popup {
  width: 100%;
  height: 100%;
}

.popup .mask {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 66;
}

.popup-body {
  width: 100%;
  /* height: 100vw; */
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 99;
}
.popup-body view {
  padding: 3vw;
  display: -webkit-flex;
  width: 94%;
  align-items: center;
  justify-content: center;
}

.popup-body .camera {
  border-bottom: 1px solid #f8f8f8;
}

.popup-body .cancel {
  border-top: 2vw solid #f8f8f8;
}
.auth-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  opacity: 0;
  background-color: rbga(255,255,255,0);
}
