.account {
  width: 100%;
}
.top {
  width: 90%;
  height: 33vw;
  background-color: #46cfc4;
  display: -webkit-flex;
  align-items: center;
  padding: 0 5vw;
  color: #fff;
  position: fixed;
}
.avatar {
  width: 20vw;
  height: 20vw;
  margin-right: 3vw;
  display: -webkit-flex;
  align-items: center;
}
.avatar image {
  width: 18vw;
  height: 18vw;
  border-radius: 50%;
}
.top .info {
  display: -webkit-flex;
  flex-flow: column;
  height: 20vw;
  /* justify-content: space-between; */
  font-size: 28rpx;
}
.top .info .nickname {
  display: inline-block;
  font-size: 36rpx;
  font-weight: 550;
  width: 60vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.top .shezhi image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20%;
  right: 5%;
}

.bottom {
  padding-bottom: 60px;
  padding-top: 38vw;
}
.ul {
  display: -webkit-flex;
  flex-wrap: wrap;
}
.ul .li {
  width: 33.3vw;
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  margin: 5vw 0;
  font-size: 28rpx;
  background-color: #fff;
  color: #000;
  padding: 0;
  line-height: normal;
}
.ul .li image {
  width: 8vw;
  height: 8.25vw;
  margin-bottom: 2vw;
}
button::after {
  display: none;
}

.fakeAvatar {
  width: 18vw;
  height: 18vw;
  border-radius: 50%;
  position: absolute;
  left: 3vw;
  top: 5vw;
  opacity: 0;
  background-color: rgba(255,255,255,0);
}
