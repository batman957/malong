.zhanghu {
  width: 100%;
}
.top {
  background-color: #46cfc4;
  width: 100%;
  height: 23vw;
  color: #fff;
  display: -webkit-flex;
  flex-flow: column;
  padding: 5vw 0;
  align-items: center;
  justify-content: space-around;
  font-size: 1rem;
  font-weight: 100;
}
.money {
  font-weight: 500;
  font-size: 56rpx;
}
.middle {
  display: -webkit-flex;
  justify-content: space-between;
  padding: 3vw;
}
.middle view {
  display: -webkit-flex;
  align-items: center;
}
.middle text {
  margin: 0 1vw;
}
.bottom {
  padding: 0 3vw;
}
.bottom .title {
  font-weight: 550;
}
.ul {
  display: -webkit-flex;
  flex-flow: column;
  overflow: auto;
}
.li {
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 3vw 0;
  border-bottom: 1px solid #f8f8f8;
}
.li .left .time {
  color: #bbb;
  margin-right: 1vw;
}
.li .right {
  color: #46cfc4;
}
.empty {
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
  justify-content: space-around;
  height: 60vw;
  margin-top: 10vw;
}

.empty image {
  width: 40vw;
  height: auto;
}
